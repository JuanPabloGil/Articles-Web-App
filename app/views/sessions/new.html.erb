<div class=" container">
  <h1 class="page-title ">Login</h1>

  <div class="row">
    <div class="col-lg-6">

      <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name, "Name: ", class: "label-form" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Login", class: "btn send-button mt-4 mb-5" %>
      <% end %>

      <p class="label-form"> Not Registed? <%= link_to "Sign up now!", new_user_path, class: 'label-form' %></p>

    </div>
  </div>
</div>
