<div>
  <hr>
  <%= @most_voted_article.title %>
  <%= @most_voted_article.text %>
  <hr>
</div>

<div class="container">

  <h1>This is the home </h1>
  <%  @articles.each do |article| %>
  <h1><%= article.title %></h1>
  <p><%= article.text %>  </p>
  <strong><%= article.category.name %>  </strong>

  <span>Number of votes  <%= article.votes.size %></span>
  <%= vote_or_unvote(article) %>
  <span class='post-date'> <%= article.created_at.strftime("%Y/%m/%d") %> </span>
  <hr>
  <% end %>

</div>
